@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta name="validation-tag" content="ssad/tetris_web/page/adapt_pc" />
    <title>@ViewBag.Title</title>
    <script src="https://cdn.bootcss.com/jquery/1.11.3/jquery.js" type="text/javascript"></script>
    <script type="text/javascript">
        var u = navigator.userAgent;
        var isiOS = !!u.match(/\(i[^;]+;( U;)? CPU.+Mac OS X/); //ios终端
        if (isiOS)
        {
            document.location.href = "/p/fx?d=@ViewBag.Pid&nd=@ViewBag.Nid&tag=pc_iframe";
        }
    </script>
    <style>
        html,
        body {
            width: 100%;
            height: 100%;
        }

        body {
            margin: 0;
            padding: 0;
            background-repeat: no-repeat;
            -webkit-background-size: cover;
            -o-background-size: cover;
            -ms-background-size: cover;
            background-size: cover;
        }

        .m-wrap {
            position: absolute;
            left: 0;
            right: 0;
            top: 0;
            bottom: 0;
            width: 550px;
            height: 100%;
            min-height:1800px;
            margin: 0 auto;
            -webkit-border-radius: 4px;
            border-radius: 4px;
            box-shadow: 2px 3px 10px #999;
            /*overflow: auto;*/
        }

            .m-wrap > iframe {
                width: 100%;
                height: 200%;
                border: none;
            }

        .m-qrcode {
            position: absolute;
            top: 117px;
            left: 572px;
            width: 120px;
            height: 162px;
            background: #fff;
            box-sizing: border-box;
        }

            .m-qrcode canvas {
                margin: 20px;
            }

            .m-qrcode > .m-desc {
                margin: 0 24px;
                font-size: 12px;
                color: #999999;
                text-align: center;
                font-family: PingFangSC-Regular;
                bottom: 18px;
                position: absolute;
            }

        .top_tip {
            height: auto;
            width: 98%;
            position: fixed;
            bottom: 0px;
            background-color: white;
        }
    </style>
</head>
<body>
    <div>
        <div class="m-wrap">
            <iframe id="ifrmain" src="/p/fx?d=@ViewBag.Pid&nd=@ViewBag.Nid&tag=pc_iframe"></iframe>
        </div>
    </div>
    <div style="display:none;">
        @Html.Raw(Server.HtmlDecode(ViewBag.ArticleContent))
    </div>
</body>
</html>
